<h1>Add Class</h1>

<div class="user-form">
	<%= form_for(@course) do |f| %>
	  <% if @course.errors.any? %>
	    <div id="error_explanation">
	      <h2><%= pluralize(@course.errors.count, "error") %> prohibited this user from being saved:</h2>

	      <ul>
	      <% @course.errors.full_messages.each do |message| %>
	        <li><%= message %></li>
	      <% end %>
	      </ul>
	    </div>
	  <% end %>

	<fieldset>
		<legend>Enter Class Data</legend>
		<p>
			<label for="course_name">Course Name:</label>
			<%= f.text_field :course_name, :size => 40 %>
		</p>
		<p>
			<label for="class_number">Course Number:</label>
			<%= f.text_field :class_number, :size => 40 %>
		</p>
		<p>
			<label for="instructor">Instructor:</label>
			<% instructors = Instructor.all #find(:all, :order => "last_name, first_name") %>
			<%= f.select(:instructor, options_from_collection_for_select(instructors, "id", "whole_name")) %>
		</p>
		<%= f.submit "Add Class" %>
	</fieldset>
	<% end %>
</div>
<p>
	<%= link_to 'Back', courses_path %>
</p>
