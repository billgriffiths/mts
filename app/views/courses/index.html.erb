<h1>Listing courses</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.course_name %></td>
        <td><%= course.class_number %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  <tr>
  <% for column in Course.content_columns %>
    <th><%= column.human_name %></th>
  <% end %>
  <th>instructor</th>
  <th>tests</th>
  </tr>
	<% for course in @courses %>
	  <tr>
	  <% for column in Course.content_columns %>
	    <td><%=h course.send(column.name) %></td>
	  <% end %>
		<td>
		<% if course.instructor %>
			<%=h "#{course.instructor.last_name}, #{course.instructor.first_name}" %>
		<% end %>
		</td>
		<td>
			<% tests = course.test_templates %>
			<%= select_tag :test, options_from_collection_for_select(tests, :id, :name, selected_value = nil)%>
		</td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
%></td>
	  </tr>
	<% end %>
  </tbody>
</table>

