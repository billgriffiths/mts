<div class="user-form">
	<%= form_for(@student) do |f| %>
	  <% if @student.errors.any? %>
	    <div id="error_explanation">
	      <h2><%= pluralize(@student.errors.count, "error") %> prohibited this user from being saved:</h2>

	      <ul>
	      <% @student.errors.full_messages.each do |message| %>
	        <li><%= message %></li>
	      <% end %>
	      </ul>
	    </div>
	  <% end %>
	
	<fieldset>
		<legend>Enter Student Data</legend>
		<% form_for :student do |form| %>
		<p>
			<label for="student_first_name">First Name:</label>
			<%= form.text_field :first_name, :size => 40 %>
		</p>
		<p>
			<label for="student_last_name">Last Name:</label>
			<%= form.text_field :last_name, :size => 40 %>
		</p>
		<p>
			<label for="student_student_number">Student Number:</label>
			<%= form.text_field :student_number, :size => 40 %>
		</p>
		<%= submit_tag "Add student", :class => "submit" %>
		<% end %>
	</fieldset>
</div>