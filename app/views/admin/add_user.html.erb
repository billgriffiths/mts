<div class="user-form">
	<%= form_for(@user) do |f| %>
	  <% if @user.errors.any? %>
	    <div id="error_explanation">
	      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this instructor from being saved:</h2>

	      <ul>
	      <% @user.errors.full_messages.each do |message| %>
	        <li><%= message %></li>
	      <% end %>
	      </ul>
	    </div>
	  <% end %>
	<fieldset>
		<legend>Enter User Details</legend>
		<p>
			<label for="user_first_name">First Name:</label>
			<%= f.text_field :first_name, :size => 40 %>
		</p>
		<p>
			<label for="user_last_name">Last Name:</label>
			<%= f.text_field :last_name, :size => 40 %>
		</p>
		<p>
			<label for="user_user_name">User Name:</label>
			<%= f.text_field :user_name, :size => 40 %>
		</p>
		<p>
			<label for="user_password">Password:</label>
			<%= f.password_field :password, :size => 40 %>
		</p>
		<p>
			<label for="user_password_confirmation">Confirm:</label>
			<%= f.password_field:password_confirmation, :size => 40 %>
		</p>
		<p>
			<label for="user_role">Role:</label>
			<%= f.select(:role, User::ROLE_TYPES ) %>
		</p>
		<%= f.submit "Add new User" %>
		<% end %>
	</fieldset>
</div>