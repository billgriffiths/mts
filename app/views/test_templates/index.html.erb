<h1>Listing test_templates</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
	  <tr>
	  <% for column in TestTemplate.content_columns %>
	    <th><%= column.human_name %></th>
	  <% end %>
	  </tr>
    <% @test_templates.each do |test_template| %>
      <tr>
		  <% for column in TestTemplate.content_columns %>
		    <td><%=h test_template.send(column.name) %></td>
		  <% end %>
        <td><%= link_to 'Show', test_template %></td>
        <td><%= link_to 'Edit', edit_test_template_path(test_template) %></td>
        <td><%= link_to 'Destroy', test_template, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Test template', new_test_template_path %>
