<h1>Listing answer_records</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
	  <tr>
	  <% for column in AnswerRecord.content_columns %>
	    <th><%= column.human_name %></th>
	  <% end %>
	  </tr>
    <% @answer_records.each do |answer_record| %>
      <tr>
		  <% for column in AnswerRecord.content_columns %>
		    <td><%=h answer_record.send(column.name) %></td>
		  <% end %>
        <td><%= link_to 'Show', answer_record %></td>
        <td><%= link_to 'Edit', edit_answer_record_path(answer_record) %></td>
        <td><%= link_to 'Destroy', answer_record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Answer record', new_answer_record_path %>
